<gameDefinition>
	<players>
		<player name="block1" type="block" position="left" isAI="true" />
		<!-- <player name="block2" type="block" position="right" /> -->
		<player name="block2" type="block" position="right" isAI="true" />
	</players>
	<objects>
		<object name="ball" type="ball" />
	</objects>
	<rules>
		<rule name="ballhitblock1" type="collision">
			<ruleAction objectName="block1" />
			<ruleAction objectName="ball" result="bounce" />
		</rule>
		<rule name="ballhitblock2" type="collision">
			<ruleAction objectName="block2" />
			<ruleAction objectName="ball" result="bounce" />
		</rule>
	</rules>
	<endConditions>
		<!-- <endCondition type="timeout" value="5" /> -->
		<endCondition type="maxScoreReached" value="2" />
	</endConditions>
</gameDefinition>