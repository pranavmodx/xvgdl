<gameDefinition>
	<players>
		<player name="block1" type="block" position="left" isAI="true" />
		<player name="block2" type="block" position="right" isAI="true" />
	</players>
	<objects>
		<object name="ball" type="ball" />
	</objects>
	<rules>
		<rule name="BallHit1" type="collision">
			<ruleAction objectName="block1" />
			<ruleAction objectName="ball" result="bounce" />
		</rule>
		<rule name="BallHit2" type="collision">
			<ruleAction objectName="block2" />
			<ruleAction objectName="ball" result="bounce" />
		</rule>
	</rules>
	<endConditions>
		<!-- <endCondition type="timeout" value="10" /> -->
		<endCondition type="maxScoreReached" value="3" />
	</endConditions>
</gameDefinition>